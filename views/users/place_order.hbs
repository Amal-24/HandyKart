<div class="container-fluid">
  <div class="row">
    <div
      class="col ms-3 bg-gradient bg-secondary mt-2 text-white rounded shadow"
    >
      <form id="checkout_form" action="" method="post">
        <div class="form-group">
          <label for="">Address</label>
          <input type="text" class="form-control" id="address" name="address" />
        </div>
        <div class="form-group">
          <label for="">Pincode</label>
          <input type="text" class="form-control" id="pincode" name="pincode" />
        </div>
        <div class="form-group">
          <label for="">Mobile Number</label>
          <input
            type="text"
            class="form-control"
            id="mobilenumber"
            name="mobilenumber"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="user_id"
            name="user_id"
            value="{{user._id}}"
            hidden
          />
        </div>
        <br />
        <h5>Total Amount:{{total.total}}</h5>
        <input type=""  name="total_amount" value="{{total.total}}" hidden>
        {{#if condition}}
        <input type="text" name="condition" id="" value="{{condition}}" hidden>
        {{/if}}
        <label for="" class="float-start">Payment Method:</label>
        <br />
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="payment_method"
            value="COD"
            id="COD"
          />
          <label class="form-check-label">
            COD
          </label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="payment_method"
            value="ONLINE"
            id="ONLINE"
          />
          <label class="form-check-label">
            Online Payment
          </label>
        </div>
        <button
          type="submit"
          class="btn btn-primary mt-2 float-start"
        >Submit</button>
        <br />
      </form>
    </div>
  </div>
</div>
