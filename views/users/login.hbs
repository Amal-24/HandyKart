<div class="container-fluid">
  <div class="row" style="justify-content: center;">
    <div class="col-md-8  bg-gradient bg-secondary mt-2 text-white rounded shadow">
      <form action="/login" method="post">
        <h1 style="text-align: center;">Login</h1>
        {{#if loginErr}}
        <p class="error" style="color:red;">! {{loginErr}}</p>
        {{/if}}
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" required="required" class="form-control" id="exampleInputEmail1"
            aria-describedby="emailHelp" placeholder="Enter email" name="Email" />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" required="required" class="form-control" id="exampleInputPassword1"
            placeholder="Password" name="Password" />
        </div>
        <div class="form-group form-check">
          <br />
          <a href="/signup" style="">Create a new account?</a>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>