<script>
  function add_to_cart(product_id) {
    $.ajax({
      url: '/add_to_cart?id=' + product_id,
      method: 'get',
      success: (response) => {
        if (response.stat) {
          // if we reload the page the cart count will be updated automatically
          location.reload()
        }
        else {
          location.href = "/login"

        }
      }

    })
  }
</script>