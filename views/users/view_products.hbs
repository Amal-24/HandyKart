<section>
    <div class="container d-flex justify-content-center align-items-center">
  {{#each products}}
    <div class="card me-2">
      <span class="percent">{{this.Discount}}</span>
      <div class="card-image"> <a href="/product_details?product_id={{this._id}}">
         <img src="product_images/{{this._id}}.jpg" width="250" />
      </a>
      </div>
      <div class="card-inner">
        <span>{{this.Category}}</span>
        <h5 class="mb-0">{{this.Name}}</h5>
        <div class="price">
          <span>â‚¹{{this.Price}}</span>
          <!--  offer price <sup>$20.99</sup> -->
        </div>
        <div class="mt-3 d-flex justify-content-between align-items-center">
          <a href="/product_details?product_id={{this._id}}"
            class="btn btn-success text-uppercase btn-sm details fs-7 fw-bold"
          >Details</a>
          <div class="d-flex flex-row">
           <!--  whishilist button
           <span class="wishlist"><i class="fa fa-heart"></i></span> -->
           <button class="cart" onclick="add_to_cart('{{this._id}}')"><i class="fa fa-shopping-cart"></i></button>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
</section>

<script>
    function add_to_cart(product_id){
    $.ajax({
        url:'/add_to_cart?id='+product_id,
        method:'get',
        success:(response)=>{
            if(response.stat){
              // if we reload the page the cart count will be updated automatically
                location.reload()
            }
            else{
              location.href = "/login"

            }
        }

    })  
}
</script>