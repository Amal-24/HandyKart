<div class="container">
    <div class="row" style="justify-content: center;">
        <div class="col-md-8  bg-gradient bg-secondary mt-2 text-white rounded shadow" >
            <h2 class="text-center">Add Product</h2>
            <form action="/admin/add_product" enctype="multipart/form-data" method="POST">
                <label for="">Name</label>
                <input type="text" name="Name" class="form-control">
                <label for="">Category</label>
                <input type="text" name="Category" class="form-control">
                <label for="">Description</label>
                <textarea type="text" name="Description" class="form-control" cols="10" rows="13"></textarea>
                <label for="">Price</label>
                <input type="number" min="0" max="999999999999" name="Price" class="form-control">
                <label for="">Image</label>
                <input type="file" name="Image" class="form-control">
                <button type="submit" class="btn btn-primary mt-3" >Submit</button>
            </form>
        </div>
    </div>
</div>