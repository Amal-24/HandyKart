<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit Product</h2>
            <form action="/admin/edit_product?id={{product._id}}" enctype="multipart/form-data" method="POST">
                <label for="">Name</label>
                <input type="text" name="Name" class="form-control" value="{{product.Name}}">
                <label for="">Category</label>
                <input type="text" name="Category" class="form-control" value="{{product.Category}}">
                <label for="">Description</label>
                <input type="text" name="Description" class="form-control" value="{{product.Description}}">
                <label for="">Price(â‚¹)</label>
                <input type="number" name="Price" class="form-control" value="{{product.Price}}">
                <img src="/product_images/{{product._id}}.jpg" alt="" style="width: 100px; heigh:50px;" id="Img"> 
                <br>
                <label for="">Image</label>
                <input type="file" name="Image" class="form-control" onchange="change_img(event)">
                <button type="submit" class="btn btn-primary mt-3" >Submit</button>
            </form>
        </div>
    </div>
</div>
<script>
    function change_img(event){
        console.log(event)
        document.getElementById('Img').src=URL.createObjectURL(event.target.files[0])
    }
</script>