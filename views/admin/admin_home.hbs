<section>
    <a href="/admin/add_product" class="btn btn-primary">Add Product</a>
    <div class="container-fluid">
        <div class="row mt-4 ">
            <div class="col-md-12">
                <table class="table table-hover ml-3" id="product_table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product</th>
                            <th scope="col">Category</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>

                            <th scope="col">Image</th>
                            <th scope="col"></th>


                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <th scope="row">{{@index}}</th>
                            <td>{{this.Name}}</td>
                            <td>{{this.Category}}</td>
                            <td>{{this.Description}}</td>
                            <td>â‚¹{{this.Price}}</td>

                            <td><img src="/product_images/{{this._id}}.jpg" style="width: 50px; height:50px;" alt="">
                            </td>
                            <td>
                                <a href="/admin/edit_product?id={{this._id}}" class="btn btn-primary">Edit</a>
                                <a href="/admin/delete_product?id={{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('Do you want to delete {{this.Name}}')">Delete</a>

                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>
<script>
    // code to make the above table into data table
 $(document).ready( function () {
    $('#product_table').DataTable({
        paging:false
        })})
</script>